@model IEnumerable<CategoryAdminViewModel>

<h2>Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                        <button type="submit" class="btn btn-admin-turquoise_grey">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-admin-turquoise_grey">Create New Category</a>