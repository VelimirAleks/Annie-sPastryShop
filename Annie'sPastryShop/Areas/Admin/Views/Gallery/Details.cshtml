@model GalleryAdminViewModel

<h1>Details</h1>

<div>
    <h4>Image</h4>
    <img src="@Model.ImageUrl" alt="Image" style="max-width: 300px; max-height: 300px;">
</div>

<div>
    <h4>Associated Product</h4>
    <p>@Model.ProductId</p>
</div>

<div>
    <h4>URL</h4>
    <p>@Model.ImageUrl</p>
</div>

<p>
    <a asp-action="All" class="btn btn-admin-turquoise_grey" >Back to List</a>
    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this image?');">
        <button type="submit" class="btn btn-admin-turquoise_grey">Delete</button>
    </form>
</p>