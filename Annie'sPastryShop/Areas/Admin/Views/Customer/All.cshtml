@model IEnumerable<CustomerAdminViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Total Orders</th>
            <th>Total Reviews</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FullName</td>
                <td>@customer.TotalOrders</td>
                <td>@customer.TotalReviews</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-admin-turquoise_grey">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>