@model IEnumerable<ProductViewModel>

<h2>Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="Product Image" style="height:370px;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name <span class="price" style="font-size: smaller;">Price: $@product.Price</span></h5>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-custom-pink_grey">Details</a>
                </div>
            </div>
        </div>
    }
</div>