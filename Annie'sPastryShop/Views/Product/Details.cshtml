@model ProductViewModel

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid" alt="Product Image">
    </div>
    <div class="col-md-6">
        <h4>Price: $@Model.Price</h4>
        <p>@Model.Description</p>
        <div class="button-container">
            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-custom-pink_grey me-2">Add to Cart</button>
            </form>
            <a href="@Url.Action("LeaveReview", "Product", new { id = Model.Id })" class="btn btn-custom-pink_grey">Leave a Review</a>
        </div>
    </div>
</div>