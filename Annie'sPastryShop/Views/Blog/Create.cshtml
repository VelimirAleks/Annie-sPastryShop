@model AnniesPastryShop.Core.Models.Blog.BlogViewModel

<h2>Create Blog</h2>

@if (!User.IsInRole(ModeratorRoleName))
{
    <p>You are not authorized to create a blog.</p>
}
else
{
    <form method="post">
        <div class="form-group">
            <label for="Title">Title:</label>
            <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Content">Content:</label>
            <textarea id="Content" name="Content" class="form-control">@Model.Content</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ImageUrl">Image URL:</label>
            <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" value="@Model.ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="CreatedAt">Created At:</label>
            <input type="datetime" id="CreatedAt" name="CreatedAt" class="form-control" value="@Model.CreatedAt" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-custom-pink_grey">Create</button>
    </form>
}