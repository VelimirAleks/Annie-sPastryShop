@model AnniesPastryShop.Core.Models.Review.ReviewViewModel

<h2>Create Review</h2>

<form asp-action="Create" asp-controller="Review" method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />

    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment">Comment:</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
    </div>
    <button type="submit" class="btn btn-custom-pink_grey">Create</button>
</form>