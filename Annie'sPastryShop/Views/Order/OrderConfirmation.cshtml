@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Order Confirm!</div>

                <div class="card-body">
                    <h1>Your order has been placed successfully!</h1>
                    <p>Order ID: @Model.OrderId</p>
                    <p>@Model.Message</p>
                    <a href="/" class="btn btn-custom-pink_grey">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>